<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PauseRunningFragment">

    <!-- MapView -->
    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginBottom="16dp"
        android:foreground="@drawable/map1" />

    <!-- TextView for Statistics (Average Pace, Distance, Heart Rate) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="16dp">

        <!-- Distance Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tvDistance1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DISTANCE (km)"
                android:textColor="#000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvDistance2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="---"
                android:textColor="#000"
                android:textFontWeight="700"
                android:textSize="20sp" />
        </LinearLayout>

        <!-- Average Pace Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tvAvgPace1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AVG PACE (/km)"
                android:textColor="#000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvAvgPace2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="---"
                android:textColor="#000"
                android:textFontWeight="700"
                android:textSize="20sp" />
        </LinearLayout>

        <!-- Heart Rate Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tvHeartRate1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HEART RATE (bpm)"
                android:textColor="#000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvHeartRate2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="---"
                android:textColor="#000"
                android:textFontWeight="700"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- CardView for Timer and Buttons -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Timer TextView -->
            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="00:00:00"
                android:textColor="#000"
                android:textSize="40sp"
                android:layout_marginBottom="16dp" />

            <!-- Buttons Start -->
            <Button
                android:id="@+id/btnStart"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/circle_start"
                android:text="Start"
                android:textColor="#FFF"
                android:textSize="20sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
