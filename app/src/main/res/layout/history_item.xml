<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/text_date_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="26 April 2024 | Seattle, USA"
        android:textStyle="bold"
        android:layout_gravity="center"/>

    <ImageView
        android:id="@+id/image_route_map"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:src="@drawable/map1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18.5 km" />

            <TextView
                android:id="@+id/text_moving_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1:17:05" />

            <TextView
                android:id="@+id/text_calories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="322 Kcal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_steps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7,389" />

            <TextView
                android:id="@+id/text_avg_pace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3:19/km" />

            <TextView
                android:id="@+id/text_avg_heart_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="132 bpm" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
