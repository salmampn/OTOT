<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PauseRunningFragment">

    <!-- MapView -->
    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginBottom="16dp"
        android:foreground="@drawable/map1" />

    <!-- TextView for Statistics (Average Pace, Distance, Heart Rate) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="16dp">

        <!-- Distance Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tvDistance1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DISTANCE (km)"
                android:textColor="#000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvDistance2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9.67"
                android:textColor="#000"
                android:textFontWeight="700"
                android:textSize="20sp" />
        </LinearLayout>

        <!-- Average Pace Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tvAvgPace1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AVG PACE (/km)"
                android:textColor="#000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvAvgPace2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.24"
                android:textColor="#000"
                android:textFontWeight="700"
                android:textSize="20sp" />
        </LinearLayout>

        <!-- Heart Rate Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tvHeartRate1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HEART RATE (bpm)"
                android:textColor="#000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvHeartRate2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="101"
                android:textColor="#000"
                android:textFontWeight="700"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- CardView for Timer and Buttons -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Timer TextView -->
            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="04:18:53"
                android:textColor="#000"
                android:textSize="40sp"
                android:layout_marginBottom="16dp" />

            <!-- Buttons (Finish and Pause) -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Finish Button -->
                <Button
                    android:id="@+id/btnFinish"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/circle_pause"
                    android:text="Finish"
                    android:textColor="#D70000"
                    android:textSize="20sp"
                    android:fontFamily="@font/roboto_bold"
                    />
                <!-- Pause Button -->
                <ImageButton
                    android:id="@+id/btnPause"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/circle_pause"
                    android:src="@drawable/pause_button"
                    android:layout_marginEnd="40dp"
                    android:layout_marginTop="40dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
